{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env"],
  "pipeline": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "db:migrate": {
      "inputs": ["src/schema.ts"],
      "outputs": ["migrations/**"],
      "cache": false
    },
    "db:push": {
      "inputs": ["src/schema.ts"],
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"]
    },
    "lint": {},
    "lint:fix": {},
    "clean": {
      "cache": false
    },
    "typecheck": {
      "cache": false
    }
  },
  "globalEnv": [
    "CI",
    "DATABASE_HOST",
    "DATABASE_PASSWORD",
    "DATABASE_USERNAME",
    "CLERK_WEBHOOK_SECRET",
    "CLERK_SECRET_KEY",
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
    "NODE_ENV",
    "VERCEL",
    "VERCEL_URL"
  ]
}
